<core:FragmentDefinition                                                                                                                                                                                                                                       
    xmlns="sap.m"                                                                                                                                                                                                                                              
    xmlns:core="sap.ui.core">                                                                                                                                                                                                                                  
    <Dialog                                                                                                                                                                                                                                                    
        title="{i18n>dlg.title.addSort}"                                                                                                                                                                                                                       
        contentWidth="400px"                                                                                                                                                                                                                                   
        draggable="true"                                                                                                                                                                                                                                       
        initialFocus="idPropertiesSelect">                                                                                                                                                                                                                     
        <content>                                                                                                                                                                                                                                              
            <VBox class="sapUiSmallMargin">                                                                                                                                                                                                                    
                <Label text="{i18n>lbl.property}" />                                                                                                                                                                                                           
                <Select                                                                                                                                                                                                                                        
                    id="idPropertiesSelect"                                                                                                                                                                                                                    
                    width="100%"                                                                                                                                                                                                                               
                    items="{dialog>/properties}"                                                                                                                                                                                                               
                    selectedKey="{dialog>/selectedProperty}"                                                                                                                                                                                                   
                    class="sapUiSmallMarginBottom">                                                                                                                                                                                                            
                    <items>                                                                                                                                                                                                                                    
                        <core:Item                                                                                                                                                                                                                             
                            key="{dialog>key}"                                                                                                                                                                                                                 
                            text="{dialog>text}" />                                                                                                                                                                                                            
                    </items>                                                                                                                                                                                                                                   
                </Select>                                                                                                                                                                                                                                      
                <Label text="{i18n>lbl.direction}" />                                                                                                                                                                                                          
                <Select                                                                                                                                                                                                                                        
                    id="idDirectionsSelect"                                                                                                                                                                                                                    
                    width="100%"                                                                                                                                                                                                                               
                    items="{dialog>/directions}"                                                                                                                                                                                                               
                    selectedKey="{dialog>/selectedDirection}">                                                                                                                                                                                                 
                    <items>                                                                                                                                                                                                                                    
                        <core:Item                                                                                                                                                                                                                             
                            key="{dialog>key}"                                                                                                                                                                                                                 
                            text="{dialog>text}" />                                                                                                                                                                                                            
                    </items>                                                                                                                                                                                                                                   
                </Select>                                                                                                                                                                                                                                      
            </VBox>                                                                                                                                                                                                                                            
        </content>                                                                                                                                                                                                                                             
        <buttons>                                                                                                                                                                                                                                              
            <Button                                                                                                                                                                                                                                            
                text="{i18n>btn.save}"                                                                                                                                                                                                                         
                type="Emphasized"                                                                                                                                                                                                                              
                icon="sap-icon://accept"                                                                                                                                                                                                                       
                press="onConfirm" />                                                                                                                                                                                                                           
            <Button                                                                                                                                                                                                                                            
                text="{i18n>btn.cancel}"                                                                                                                                                                                                                       
                type="Ghost"                                                                                                                                                                                                                                   
                icon="sap-icon://decline"                                                                                                                                                                                                                      
                press="onCancel" />                                                                                                                                                                                                                            
        </buttons>                                                                                                                                                                                                                                             
    </Dialog>                                                                                                                                                                                                                                                  
</core:FragmentDefinition>&nbsp;                                                                                                                                                                                                                               