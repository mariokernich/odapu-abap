<c:FragmentDefinition                                                                                                                                                                                                                                          
    xmlns="sap.m"                                                                                                                                                                                                                                              
    xmlns:c="sap.ui.core"                                                                                                                                                                                                                                      
>                                                                                                                                                                                                                                                              
    <VBox                                                                                                                                                                                                                                                      
        visible="{= ${local>/resourceType} === 'entity' &amp;&amp; ${local>/selectedMethod} === 'GET' &amp;&amp; ${local>/selectedEntityName} !== '' }"                                                                                                        
        class="sapUiContentPadding"                                                                                                                                                                                                                            
    >                                                                                                                                                                                                                                                          
        <HBox                                                                                                                                                                                                                                                  
            justifyContent="SpaceBetween"                                                                                                                                                                                                                      
            alignItems="Center"                                                                                                                                                                                                                                
        >                                                                                                                                                                                                                                                      
            <Title                                                                                                                                                                                                                                             
                text="{i18n>lbl.filter}"                                                                                                                                                                                                                       
                level="H3"                                                                                                                                                                                                                                     
            />                                                                                                                                                                                                                                                 
            <Button                                                                                                                                                                                                                                            
                icon="sap-icon://add"                                                                                                                                                                                                                          
                text="{i18n>lbl.addFilter}"                                                                                                                                                                                                                    
                type="Transparent"                                                                                                                                                                                                                             
                press="onAddFilterButtonPress"                                                                                                                                                                                                                 
            />                                                                                                                                                                                                                                                 
        </HBox>                                                                                                                                                                                                                                                
        <Table                                                                                                                                                                                                                                                 
            noDataText="{i18n>msg.noFiltersDefined}"                                                                                                                                                                                                           
            items="{entityFilters>/}"                                                                                                                                                                                                                          
        >                                                                                                                                                                                                                                                      
            <columns>                                                                                                                                                                                                                                          
                <Column>                                                                                                                                                                                                                                       
                    <Text text="{i18n>lbl.field}" />                                                                                                                                                                                                           
                </Column>                                                                                                                                                                                                                                      
                <Column>                                                                                                                                                                                                                                       
                    <Text text="{i18n>lbl.operand}" />                                                                                                                                                                                                         
                </Column>                                                                                                                                                                                                                                      
                <Column>                                                                                                                                                                                                                                       
                    <Text text="{i18n>lbl.value}" />                                                                                                                                                                                                           
                </Column>                                                                                                                                                                                                                                      
                <Column hAlign="End">                                                                                                                                                                                                                          
                    <Text text="{i18n>lbl.actions}" />                                                                                                                                                                                                         
                </Column>                                                                                                                                                                                                                                      
            </columns>                                                                                                                                                                                                                                         
            <items>                                                                                                                                                                                                                                            
                <ColumnListItem>                                                                                                                                                                                                                               
                    <cells>                                                                                                                                                                                                                                    
                        <Text text="{entityFilters>property}" />                                                                                                                                                                                               
                        <Text text="{entityFilters>operator}" />                                                                                                                                                                                               
                        <Text text="{entityFilters>value}" />                                                                                                                                                                                                  
                        <HBox                                                                                                                                                                                                                                  
                            justifyContent="End"                                                                                                                                                                                                               
                            alignItems="Center"                                                                                                                                                                                                                
                        >                                                                                                                                                                                                                                      
                            <Button                                                                                                                                                                                                                            
                                icon="sap-icon://edit"                                                                                                                                                                                                         
                                type="Transparent"                                                                                                                                                                                                             
                                press="onButtonFilterEditPress"                                                                                                                                                                                                
                            />                                                                                                                                                                                                                                 
                            <Button                                                                                                                                                                                                                            
                                icon="sap-icon://delete"                                                                                                                                                                                                       
                                type="Transparent"                                                                                                                                                                                                             
                                press="onButtonFilterDeletePress"                                                                                                                                                                                              
                            />                                                                                                                                                                                                                                 
                        </HBox>                                                                                                                                                                                                                                
                    </cells>                                                                                                                                                                                                                                   
                </ColumnListItem>                                                                                                                                                                                                                              
            </items>                                                                                                                                                                                                                                           
        </Table>                                                                                                                                                                                                                                               
    </VBox>                                                                                                                                                                                                                                                    
</c:FragmentDefinition>                                                                                                                                                                                                                                        
                                                                                                                                                                                                                                                               