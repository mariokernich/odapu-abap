<core:FragmentDefinition                                                                                                                                                                                                                                       
    xmlns="sap.m"                                                                                                                                                                                                                                              
    xmlns:core="sap.ui.core">                                                                                                                                                                                                                                  
    <Dialog                                                                                                                                                                                                                                                    
        title="{i18n>dlg.title.addFilter}"                                                                                                                                                                                                                     
        contentWidth="400px"                                                                                                                                                                                                                                   
        draggable="true">                                                                                                                                                                                                                                      
        <content>                                                                                                                                                                                                                                              
            <VBox class="sapUiSmallMargin">                                                                                                                                                                                                                    
                <Label text="{i18n>lbl.property}" />                                                                                                                                                                                                           
                <Select                                                                                                                                                                                                                                        
                    id="idPropertiesSelect"                                                                                                                                                                                                                    
                    width="100%"                                                                                                                                                                                                                               
                    items="{dialog>/properties}"                                                                                                                                                                                                               
                    selectedKey="{dialog>/selectedProperty}">                                                                                                                                                                                                  
                    <items>                                                                                                                                                                                                                                    
                        <core:Item                                                                                                                                                                                                                             
                            key="{dialog>key}"                                                                                                                                                                                                                 
                            text="{dialog>text}" />                                                                                                                                                                                                            
                    </items>                                                                                                                                                                                                                                   
                </Select>                                                                                                                                                                                                                                      
                <Label text="{i18n>lbl.operator}" />                                                                                                                                                                                                           
                <Select                                                                                                                                                                                                                                        
                    id="idOperatorsSelect"                                                                                                                                                                                                                     
                    width="100%"                                                                                                                                                                                                                               
                    items="{dialog>/operators}"                                                                                                                                                                                                                
                    selectedKey="{dialog>/selectedOperator}">                                                                                                                                                                                                  
                    <items>                                                                                                                                                                                                                                    
                        <core:Item                                                                                                                                                                                                                             
                            key="{dialog>key}"                                                                                                                                                                                                                 
                            text="{dialog>text}" />                                                                                                                                                                                                            
                    </items>                                                                                                                                                                                                                                   
                </Select>                                                                                                                                                                                                                                      
                <Label text="{i18n>lbl.value}" />                                                                                                                                                                                                              
                <Input                                                                                                                                                                                                                                         
                    id="idValueInput"                                                                                                                                                                                                                          
                    width="100%"                                                                                                                                                                                                                               
                    value="{dialog>/selectedValue}"                                                                                                                                                                                                            
                    placeholder="{i18n>ph.enterValue}"                                                                                                                                                                                                         
                    submit="onConfirm" />                                                                                                                                                                                                                      
            </VBox>                                                                                                                                                                                                                                            
        </content>                                                                                                                                                                                                                                             
        <buttons>                                                                                                                                                                                                                                              
            <Button                                                                                                                                                                                                                                            
                text="{i18n>btn.save}"                                                                                                                                                                                                                         
                type="Emphasized"                                                                                                                                                                                                                              
                icon="sap-icon://accept"                                                                                                                                                                                                                       
                press="onConfirm" />                                                                                                                                                                                                                           
            <Button                                                                                                                                                                                                                                            
                text="{i18n>btn.cancel}"                                                                                                                                                                                                                       
                type="Ghost"                                                                                                                                                                                                                                   
                icon="sap-icon://decline"                                                                                                                                                                                                                      
                press="onCancel" />                                                                                                                                                                                                                            
        </buttons>                                                                                                                                                                                                                                             
    </Dialog>                                                                                                                                                                                                                                                  
</core:FragmentDefinition>&nbsp;                                                                                                                                                                                                                               