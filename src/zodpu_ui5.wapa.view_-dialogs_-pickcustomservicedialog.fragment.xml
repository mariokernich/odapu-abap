<core:FragmentDefinition                                                                                                                                                                                                                                       
    xmlns="sap.m"                                                                                                                                                                                                                                              
    xmlns:core="sap.ui.core">                                                                                                                                                                                                                                  
    <Dialog                                                                                                                                                                                                                                                    
        title="{i18n>dlg.title.selectCustomService}"                                                                                                                                                                                                           
        contentWidth="500px">                                                                                                                                                                                                                                  
        <content>                                                                                                                                                                                                                                              
            <VBox class="sapUiSmallMargin">                                                                                                                                                                                                                    
                <Label text="{i18n>lbl.serviceType}" />                                                                                                                                                                                                        
                <SegmentedButton                                                                                                                                                                                                                               
                    selectedKey="{dialog>/selectedType}"                                                                                                                                                                                                       
                    width="100%"                                                                                                                                                                                                                               
                    class="sapUiSmallMarginBottom">                                                                                                                                                                                                            
                    <items>                                                                                                                                                                                                                                    
                        <SegmentedButtonItem                                                                                                                                                                                                                   
                            key="2"                                                                                                                                                                                                                            
                            text="OData V2" />                                                                                                                                                                                                                 
                        <SegmentedButtonItem                                                                                                                                                                                                                   
                            key="4"                                                                                                                                                                                                                            
                            text="OData V4" />                                                                                                                                                                                                                 
                    </items>                                                                                                                                                                                                                                   
                </SegmentedButton>                                                                                                                                                                                                                             
                <Label text="{i18n>lbl.servicePath}" />                                                                                                                                                                                                        
                <Input                                                                                                                                                                                                                                         
                    id="idServicePathInput"                                                                                                                                                                                                                    
                    width="100%"                                                                                                                                                                                                                               
                    value="{dialog>/servicePath}"                                                                                                                                                                                                              
                    placeholder="{i18n>ph.enterServicePath}"                                                                                                                                                                                                   
                    submit="onConfirm" />                                                                                                                                                                                                                      
            </VBox>                                                                                                                                                                                                                                            
        </content>                                                                                                                                                                                                                                             
        <buttons>                                                                                                                                                                                                                                              
            <Button                                                                                                                                                                                                                                            
                text="{i18n>btn.save}"                                                                                                                                                                                                                         
                type="Emphasized"                                                                                                                                                                                                                              
                icon="sap-icon://accept"                                                                                                                                                                                                                       
                press="onConfirm" />                                                                                                                                                                                                                           
            <Button                                                                                                                                                                                                                                            
                text="{i18n>btn.cancel}"                                                                                                                                                                                                                       
                type="Ghost"                                                                                                                                                                                                                                   
                icon="sap-icon://decline"                                                                                                                                                                                                                      
                press="onCancel" />                                                                                                                                                                                                                            
        </buttons>                                                                                                                                                                                                                                             
    </Dialog>                                                                                                                                                                                                                                                  
</core:FragmentDefinition>&nbsp;                                                                                                                                                                                                                               