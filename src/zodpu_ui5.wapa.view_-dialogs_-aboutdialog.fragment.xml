<core:FragmentDefinition                                                                                                                                                                                                                                       
    xmlns="sap.m"                                                                                                                                                                                                                                              
    xmlns:core="sap.ui.core"                                                                                                                                                                                                                                   
>                                                                                                                                                                                                                                                              
    <Dialog                                                                                                                                                                                                                                                    
        title="About"                                                                                                                                                                                                                                          
        contentWidth="400px"                                                                                                                                                                                                                                   
        draggable="true"                                                                                                                                                                                                                                       
        initialFocus="idCloseButton"                                                                                                                                                                                                                           
        busyIndicatorDelay="0"                                                                                                                                                                                                                                 
        class="sapUiContentPadding"                                                                                                                                                                                                                            
    >                                                                                                                                                                                                                                                          
        <content>                                                                                                                                                                                                                                              
            <VBox alignItems="Center">                                                                                                                                                                                                                         
                <VBox                                                                                                                                                                                                                                          
                    alignItems="Center"                                                                                                                                                                                                                        
                    class="sapUiSmallMarginBottom"                                                                                                                                                                                                             
                >                                                                                                                                                                                                                                              
                    <Image                                                                                                                                                                                                                                     
                        src="{dialog>/Logo}"                                                                                                                                                                                                                   
                        width="200px"                                                                                                                                                                                                                          
                        height="auto"                                                                                                                                                                                                                          
                        decorative="false"                                                                                                                                                                                                                     
                        alt="ODAPU Logo"                                                                                                                                                                                                                       
                    />                                                                                                                                                                                                                                         
                    <Text                                                                                                                                                                                                                                      
                        text="ODATA &amp; APC Test Tool"                                                                                                                                                                                                       
                        class="sapUiTinyMarginTop sapThemeFontSizeLarge"                                                                                                                                                                                       
                    />                                                                                                                                                                                                                                         
                    <Text                                                                                                                                                                                                                                      
                        text="Installed Version: {dialog>/Version}"                                                                                                                                                                                            
                        class="sapUiTinyMarginTop sapThemeFontSizeSmall"                                                                                                                                                                                       
                    />                                                                                                                                                                                                                                         
                </VBox>                                                                                                                                                                                                                                        
                <Text                                                                                                                                                                                                                                          
                    text="This app gives you a powerful tool to test ODATA services – whether it's modern ABAP RAP/CDS or classic SEGW projects – as well as APC (ABAP Push Channels)."                                                                        
                    class="sapUiTinyMarginBottom sapUiTinyMarginBegin sapUiTinyMarginEnd"                                                                                                                                                                      
                />                                                                                                                                                                                                                                             
                <Text                                                                                                                                                                                                                                          
                    text="If you find this project helpful, please consider giving it a star on GitHub ⭐. For companies and individuals who want to support the development, sponsorship opportunities are available - sponsors will be prominently featured i+
n the application."                                                                                                                                                                                                                                            
                    class="sapUiTinyMarginBottom sapUiTinyMarginBegin sapUiTinyMarginEnd"                                                                                                                                                                      
                />                                                                                                                                                                                                                                             
                <HBox                                                                                                                                                                                                                                          
                    alignItems="Center"                                                                                                                                                                                                                        
                    justifyContent="Center"                                                                                                                                                                                                                    
                    class="sapUiTinyMarginTop"                                                                                                                                                                                                                 
                >                                                                                                                                                                                                                                              
                    <core:Icon                                                                                                                                                                                                                                 
                        src="sap-icon://linkedin"                                                                                                                                                                                                              
                        class="sapUiTinyMarginEnd"                                                                                                                                                                                                             
                    />                                                                                                                                                                                                                                         
                    <Link                                                                                                                                                                                                                                      
                        text="Developer: Mario Kernich 👨‍💻"                                                                                                                                                                                                  
                        target="_blank"                                                                                                                                                                                                                        
                        href="https://www.linkedin.com/in/mariokernich/"                                                                                                                                                                                       
                    />                                                                                                                                                                                                                                         
                </HBox>                                                                                                                                                                                                                                        
                <HBox                                                                                                                                                                                                                                          
                    justifyContent="Center"                                                                                                                                                                                                                    
                    class="sapUiSmallMarginTop"                                                                                                                                                                                                                
                >                                                                                                                                                                                                                                              
                    <HBox class="sapUiSmallMarginEnd">                                                                                                                                                                                                         
                        <core:Icon                                                                                                                                                                                                                             
                            src="sap-icon://github"                                                                                                                                                                                                            
                            class="sapUiTinyMarginEnd"                                                                                                                                                                                                         
                        />                                                                                                                                                                                                                                     
                        <Link                                                                                                                                                                                                                                  
                            text="GitHub Repository"                                                                                                                                                                                                           
                            target="_blank"                                                                                                                                                                                                                    
                            href="https://github.com/mariokernich/odapu-abap"                                                                                                                                                                                  
                        />                                                                                                                                                                                                                                     
                    </HBox>                                                                                                                                                                                                                                    
                    <HBox>                                                                                                                                                                                                                                     
                        <core:Icon                                                                                                                                                                                                                             
                            src="sap-icon://bug"                                                                                                                                                                                                               
                            class="sapUiTinyMarginEnd"                                                                                                                                                                                                         
                        />                                                                                                                                                                                                                                     
                        <Link                                                                                                                                                                                                                                  
                            text="Request Feature or Report Bug"                                                                                                                                                                                               
                            target="_blank"                                                                                                                                                                                                                    
                            href="https://github.com/mariokernich/odapu-abap/issues"                                                                                                                                                                           
                        />                                                                                                                                                                                                                                     
                    </HBox>                                                                                                                                                                                                                                    
                </HBox>                                                                                                                                                                                                                                        
            </VBox>                                                                                                                                                                                                                                            
        </content>                                                                                                                                                                                                                                             
        <endButton>                                                                                                                                                                                                                                            
            <Button                                                                                                                                                                                                                                            
                text="{i18n>btn.close}"                                                                                                                                                                                                                        
                press="onConfirm"                                                                                                                                                                                                                              
                type="Ghost"                                                                                                                                                                                                                                   
                id="idCloseButton"                                                                                                                                                                                                                             
                icon="sap-icon://decline"                                                                                                                                                                                                                      
            />                                                                                                                                                                                                                                                 
        </endButton>                                                                                                                                                                                                                                           
    </Dialog>                                                                                                                                                                                                                                                  
</core:FragmentDefinition>                                                                                                                                                                                                                                     