<core:FragmentDefinition                                                                                                                                                                                                                                       
    xmlns="sap.m"                                                                                                                                                                                                                                              
    xmlns:core="sap.ui.core">                                                                                                                                                                                                                                  
    <Dialog                                                                                                                                                                                                                                                    
        title="{i18n>dlg.title.saveProject}"                                                                                                                                                                                                                   
        contentWidth="400px"                                                                                                                                                                                                                                   
        initialFocus="idProjectNameInput"                                                                                                                                                                                                                      
        draggable="true">                                                                                                                                                                                                                                      
        <content>                                                                                                                                                                                                                                              
            <VBox class="sapUiSmallMargin">                                                                                                                                                                                                                    
                <Label text="{i18n>lbl.projectName}" />                                                                                                                                                                                                        
                <Input                                                                                                                                                                                                                                         
                    id="idProjectNameInput"                                                                                                                                                                                                                    
                    placeholder="{i18n>ph.enterProjectName}"                                                                                                                                                                                                   
                    width="100%"                                                                                                                                                                                                                               
                    value="{dialog>/projectName}"                                                                                                                                                                                                              
                    submit="onSave" />                                                                                                                                                                                                                         
            </VBox>                                                                                                                                                                                                                                            
        </content>                                                                                                                                                                                                                                             
        <buttons>                                                                                                                                                                                                                                              
            <Button                                                                                                                                                                                                                                            
                text="{i18n>btn.save}"                                                                                                                                                                                                                         
                type="Emphasized"                                                                                                                                                                                                                              
                icon="sap-icon://accept"                                                                                                                                                                                                                       
                press="onSave" />                                                                                                                                                                                                                              
            <Button                                                                                                                                                                                                                                            
                text="{i18n>btn.cancel}"                                                                                                                                                                                                                       
                type="Ghost"                                                                                                                                                                                                                                   
                icon="sap-icon://decline"                                                                                                                                                                                                                      
                press="onCancel" />                                                                                                                                                                                                                            
        </buttons>                                                                                                                                                                                                                                             
    </Dialog>                                                                                                                                                                                                                                                  
</core:FragmentDefinition>&nbsp;                                                                                                                                                                                                                               