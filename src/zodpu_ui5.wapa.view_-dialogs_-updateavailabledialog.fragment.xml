<core:FragmentDefinition                                                                                                                                                                                                                                       
    xmlns="sap.m"                                                                                                                                                                                                                                              
    xmlns:core="sap.ui.core">                                                                                                                                                                                                                                  
    <Dialog                                                                                                                                                                                                                                                    
        title="{i18n>dlg.title.updateAvailable}"                                                                                                                                                                                                               
        contentWidth="500px"                                                                                                                                                                                                                                   
        draggable="true"                                                                                                                                                                                                                                       
        class="sapUiContentPadding">                                                                                                                                                                                                                           
        <content>                                                                                                                                                                                                                                              
            <VBox>                                                                                                                                                                                                                                             
                <VBox alignItems="Center" class="sapUiSmallMarginBottom">                                                                                                                                                                                      
                    <Text                                                                                                                                                                                                                                      
                        text="{i18n>msg.newVersionAvailable}"                                                                                                                                                                                                  
                        wrapping="true"                                                                                                                                                                                                                        
                        class="sapUiTinyMarginBottom" />                                                                                                                                                                                                       
                    <HBox>                                                                                                                                                                                                                                     
                        <FormattedText                                                                                                                                                                                                                         
                            htmlText="{i18n>msg.currentVersion}: {dialog>/currentVersion}"                                                                                                                                                                     
                            class="sapUiTinyMarginEnd" />                                                                                                                                                                                                      
                        <FormattedText                                                                                                                                                                                                                         
                            htmlText="{i18n>msg.latestVersion}: {dialog>/latestVersion}"                                                                                                                                                                       
                            class="sapUiTinyMarginBegin" />                                                                                                                                                                                                    
                    </HBox>                                                                                                                                                                                                                                    
                </VBox>                                                                                                                                                                                                                                        
                <TextArea                                                                                                                                                                                                                                      
                    value="{dialog>/releaseNotes}"                                                                                                                                                                                                             
                    rows="20"                                                                                                                                                                                                                                  
                    width="100%"&nbsp;                                                                                                                                                                                                                         
                    editable="false"/>                                                                                                                                                                                                                         
            </VBox>                                                                                                                                                                                                                                            
        </content>                                                                                                                                                                                                                                             
        <buttons>                                                                                                                                                                                                                                              
            <Button                                                                                                                                                                                                                                            
                text="{i18n>btn.getUpdate}"                                                                                                                                                                                                                    
                type="Emphasized"                                                                                                                                                                                                                              
                icon="sap-icon://chain-link"                                                                                                                                                                                                                   
                press="onGetUpdate" />                                                                                                                                                                                                                         
            <Button                                                                                                                                                                                                                                            
                text="{i18n>btn.close}"                                                                                                                                                                                                                        
                type="Ghost"                                                                                                                                                                                                                                   
                icon="sap-icon://decline"                                                                                                                                                                                                                      
                press="onClose" />                                                                                                                                                                                                                             
        </buttons>                                                                                                                                                                                                                                             
    </Dialog>                                                                                                                                                                                                                                                  
</core:FragmentDefinition>&nbsp;                                                                                                                                                                                                                               