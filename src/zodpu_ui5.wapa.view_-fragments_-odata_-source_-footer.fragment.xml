<c:FragmentDefinition                                                                                                                                                                                                                                          
    xmlns="sap.m"                                                                                                                                                                                                                                              
    xmlns:c="sap.ui.core"                                                                                                                                                                                                                                      
>                                                                                                                                                                                                                                                              
    <Toolbar>                                                                                                                                                                                                                                                  
        <Button                                                                                                                                                                                                                                                
            text="{= ${local>/resourceType} === 'entity' ? ${i18n>btn.sendRequest} : ${i18n>btn.executeFunction}}"                                                                                                                                             
            type="Emphasized"                                                                                                                                                                                                                                  
            press=".onSendRequest"                                                                                                                                                                                                                             
            width="100%"                                                                                                                                                                                                                                       
            enabled="{= ${global>/AppBusy} === false &amp;&amp; ${local>/selectedEntityName} !== '' }"                                                                                                                                                         
        />                                                                                                                                                                                                                                                     
    </Toolbar>                                                                                                                                                                                                                                                 
</c:FragmentDefinition>                                                                                                                                                                                                                                        
                                                                                                                                                                                                                                                               