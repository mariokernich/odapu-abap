<core:FragmentDefinition                                                                                                                                                                                                                                       
    xmlns="sap.m"                                                                                                                                                                                                                                              
    xmlns:core="sap.ui.core">                                                                                                                                                                                                                                  
    <Dialog                                                                                                                                                                                                                                                    
        title="{i18n>dlg.title.savedProjects}"                                                                                                                                                                                                                 
        contentWidth="400px"                                                                                                                                                                                                                                   
        contentHeight="600px"                                                                                                                                                                                                                                  
        draggable="true"                                                                                                                                                                                                                                       
        initialFocus="idProjectSearchField">                                                                                                                                                                                                                   
        <content>                                                                                                                                                                                                                                              
            <Toolbar>                                                                                                                                                                                                                                          
                <SearchField                                                                                                                                                                                                                                   
                    placeholder="{i18n>ph.searchProjects}..."                                                                                                                                                                                                  
                    liveChange="onSearch"                                                                                                                                                                                                                      
                    width="100%"&nbsp;                                                                                                                                                                                                                         
                    id="idProjectSearchField" />                                                                                                                                                                                                               
                <ToolbarSpacer />                                                                                                                                                                                                                              
            </Toolbar>                                                                                                                                                                                                                                         
            <Table                                                                                                                                                                                                                                             
                id="idProjectsTable"                                                                                                                                                                                                                           
                items="{dialog>/projects}"                                                                                                                                                                                                                     
                mode="SingleSelectMaster"                                                                                                                                                                                                                      
                growing="true"                                                                                                                                                                                                                                 
                growingThreshold="100"                                                                                                                                                                                                                         
                noDataText="{i18n>msg.noProjectsFound}">                                                                                                                                                                                                       
                <columns>                                                                                                                                                                                                                                      
                    <Column>                                                                                                                                                                                                                                   
                        <Label text="{i18n>lbl.projectName}" />                                                                                                                                                                                                
                    </Column>                                                                                                                                                                                                                                  
                    <Column hAlign="End">                                                                                                                                                                                                                      
                        <Label text="{i18n>lbl.actions}" />                                                                                                                                                                                                    
                    </Column>                                                                                                                                                                                                                                  
                </columns>                                                                                                                                                                                                                                     
                <items>                                                                                                                                                                                                                                        
                    <ColumnListItem>                                                                                                                                                                                                                           
                        <cells>                                                                                                                                                                                                                                
                            <Text text="{dialog>ProjectName}" />                                                                                                                                                                                               
                            <HBox justifyContent="End">                                                                                                                                                                                                        
                                <Button                                                                                                                                                                                                                        
                                    icon="sap-icon://delete"                                                                                                                                                                                                   
                                    type="Reject"                                                                                                                                                                                                              
                                    press="onDelete" />                                                                                                                                                                                                        
                            </HBox>                                                                                                                                                                                                                            
                        </cells>                                                                                                                                                                                                                               
                    </ColumnListItem>                                                                                                                                                                                                                          
                </items>                                                                                                                                                                                                                                       
            </Table>                                                                                                                                                                                                                                           
        </content>                                                                                                                                                                                                                                             
        <buttons>                                                                                                                                                                                                                                              
            <Button                                                                                                                                                                                                                                            
                text="{i18n>btn.load}"                                                                                                                                                                                                                         
                type="Emphasized"                                                                                                                                                                                                                              
                icon="sap-icon://accept"                                                                                                                                                                                                                       
                press="onLoad" />                                                                                                                                                                                                                              
            <Button                                                                                                                                                                                                                                            
                text="{i18n>btn.cancel}"                                                                                                                                                                                                                       
                type="Ghost"                                                                                                                                                                                                                                   
                icon="sap-icon://decline"                                                                                                                                                                                                                      
                press="onCancel" />                                                                                                                                                                                                                            
        </buttons>                                                                                                                                                                                                                                             
    </Dialog>                                                                                                                                                                                                                                                  
</core:FragmentDefinition>&nbsp;                                                                                                                                                                                                                               